{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
